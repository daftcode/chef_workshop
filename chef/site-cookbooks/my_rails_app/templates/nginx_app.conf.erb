upstream <%= node['app'] %> {
  server <%= node['nginx_server'] %>;
}

server {
  listen 80;
  root /home/<%= node['user'] %>/<%= node['app'] %>/current/public;

  location / {
    proxy_pass http://<%= node['app'] %>;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}